<UserControl x:Class="MarkTheSpot.GPSTag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="150" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Button Grid.Column="0" Background="Red" x:Name="DeleteBtn" Click="DeleteBtn_Click">
            <TextBlock Text="X" Foreground="White" FontSize="48"></TextBlock>
        </Button-->
        <Button Grid.Column="0" x:Name="DeleteBtn" Click="DeleteBtn_Click">
            <Image Source="Assets/Delete.png"/>
        </Button>
        <Button Grid.Column="1" x:Name="FindBtn" Click="FindBtn_Click">
            <TextBlock x:Name="FindBtnTxt"></TextBlock>
        </Button>

    </Grid>
</UserControl>